<article class="article">
  <div class="article-header">
    <h1 class="article-title">{{ article.title | decodeEntities }}</h1>
    <div class="article-meta">
      <span class="badge">{{ article.category | titleCase }}</span>
      {% if article.language %}<span class="badge">{{ article.language | upper }}</span>{% endif %}
      <span class="muted">{{ article.publishedAt | formatDateTime }}</span>
      <span class="muted">·</span>
      <span class="muted">{{ article.source.name }}</span>
      <span class="muted">·</span>
      <a href="{{ article.canonicalUrl }}" target="_blank" rel="noopener noreferrer">Read original</a>
    </div>
  </div>

  {% if article.image %}
    <div class="article-image">
      <img src="{{ article.image }}" alt="" loading="lazy" decoding="async" />
    </div>
  {% endif %}

  {% if article.summary %}
    <p class="article-summary">{{ article.summary }}</p>
  {% endif %}

  {% if article.contentText %}
    <section class="article-content">
      <h2 class="article-content-title">From RSS</h2>
      <div class="muted small">
        Long content extracted from the source’s RSS feed. For the official version, use “Open original”.
      </div>
      <div class="article-content-body">{{ article.contentText | textToHtml | safe }}</div>
    </section>
  {% endif %}

  <div class="article-actions">
    <a class="button" href="{{ article.canonicalUrl }}" target="_blank" rel="noopener noreferrer">Open original →</a>
    <a class="button button-secondary" href="{{ ('/category/' + article.category + '/') | url }}">More in {{ article.category | titleCase }}</a>
  </div>
</article>
