<li class="news-item">
  <div class="news-title">
    <a href="{{ ('/p/' + item.id + '/') | url }}">{{ item.title }}</a>
  </div>
  <div class="news-meta">
    <span class="badge">{{ item.category }}</span>
    <span class="muted">{{ item.publishedAt | formatDateTime }}</span>
    <span class="muted">·</span>
    <span class="muted">{{ item.source.name }}</span>
    <span class="muted">·</span>
    <a class="muted" href="{{ item.canonicalUrl }}" target="_blank" rel="noopener noreferrer">Open original</a>
  </div>
  {% if item.summary %}
    <p class="news-summary">{{ item.summary }}</p>
  {% endif %}
</li>

