layout: layouts/base.njk
title: "URL Encode/Decode"
description: "encodeURIComponent / decodeURIComponent. Runs locally in your browser."
pageScript: "/assets/tools/url.js"
---

<h1 data-i18n="tools.item.url.title">URL Encode/Decode</h1>
<p class="muted" data-i18n="tools.localNotice">Runs locally in your browser. Nothing is uploaded.</p>

<section class="tool-shell">
  <div class="tool-grid">
    <div class="tool-pane">
      <label class="tool-label" for="tool-input" data-i18n="tool.common.input">Input</label>
      <textarea
        id="tool-input"
        class="tool-textarea"
        rows="10"
        placeholder="e.g. spaces, &, ?, unicode…"
        data-i18n-placeholder="tool.url.placeholder"
        spellcheck="false"
      ></textarea>
    </div>
    <div class="tool-pane">
      <label class="tool-label" for="tool-output" data-i18n="tool.common.output">Output</label>
      <textarea
        id="tool-output"
        class="tool-textarea"
        rows="10"
        readonly
        placeholder="Result will appear here…"
        data-i18n-placeholder="tool.common.resultPlaceholder"
        spellcheck="false"
      ></textarea>
    </div>
  </div>

  <div class="tool-actions">
    <button class="button" type="button" id="btn-encode" data-i18n="tool.url.encode">Encode →</button>
    <button class="button button-secondary" type="button" id="btn-decode" data-i18n="tool.url.decode">
      ← Decode
    </button>
    <button class="button button-secondary" type="button" id="btn-swap" data-i18n="tool.common.swap">
      Swap
    </button>
    <button class="button button-secondary" type="button" id="btn-copy" data-i18n="tool.common.copyOutput">
      Copy output
    </button>
    <button class="button button-secondary" type="button" id="btn-clear" data-i18n="tool.common.clear">
      Clear
    </button>
  </div>

  <div class="tool-options">
    <label class="tool-option">
      <input type="checkbox" id="opt-plus-for-space" />
      <span data-i18n="tool.url.plusForSpace">Use “+” for spaces (querystring style)</span>
    </label>
  </div>

  <p class="muted small" id="tool-status" role="status"></p>
</section>
