layout: layouts/base.njk
title: "XML Format/Minify"
description: "Format (pretty-print) or minify XML. Runs locally in your browser."
pageScript: "/assets/tools/xml.js"
---

<h1 data-i18n="tools.item.xml.title">XML Format/Minify</h1>
<p class="muted" data-i18n="tools.localNotice">Runs locally in your browser. Nothing is uploaded.</p>

<section class="tool-shell">
  <div class="tool-grid">
    <div class="tool-pane">
      <label class="tool-label" for="tool-input" data-i18n="tool.common.input">Input</label>
      <textarea
        id="tool-input"
        class="tool-textarea"
        rows="10"
        placeholder="<root><item id=&quot;1&quot;>hello</item></root>"
        data-i18n-placeholder="tool.xml.placeholder"
        spellcheck="false"
      ></textarea>
    </div>
    <div class="tool-pane">
      <label class="tool-label" for="tool-output" data-i18n="tool.common.output">Output</label>
      <textarea
        id="tool-output"
        class="tool-textarea"
        rows="10"
        readonly
        placeholder="Result will appear hereâ€¦"
        data-i18n-placeholder="tool.common.resultPlaceholder"
        spellcheck="false"
      ></textarea>
    </div>
  </div>

  <div class="tool-actions">
    <button class="button" type="button" id="btn-format" data-i18n="tool.xml.format">Format</button>
    <button class="button button-secondary" type="button" id="btn-minify" data-i18n="tool.xml.minify">
      Minify
    </button>
    <button class="button button-secondary" type="button" id="btn-swap" data-i18n="tool.common.swap">Swap</button>
    <button class="button button-secondary" type="button" id="btn-copy" data-i18n="tool.common.copyOutput">
      Copy output
    </button>
    <button class="button button-secondary" type="button" id="btn-clear" data-i18n="tool.common.clear">Clear</button>
  </div>

  <div class="tool-options">
    <label class="tool-option">
      <span data-i18n="tool.xml.indent">Indent:</span>
      <select id="opt-indent">
        <option value="2">2</option>
        <option value="4">4</option>
        <option value="tab" data-i18n="tool.xml.indent.tab">Tab</option>
      </select>
    </label>
  </div>

  <p class="muted small" id="tool-status" role="status"></p>
</section>

