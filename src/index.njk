---
layout: layouts/base.njk
rssPath: /feed.xml
pagination:
  data: latestPages
  size: 1
  alias: listPage
permalink: "{% if listPage.pageNumber == 0 %}index.html{% else %}page/{{ listPage.pageNumber + 1 }}/index.html{% endif %}"
---

<h1>{{ site.name }}</h1>
{% if site.tagline or site.description %}
  <p class="muted">
    {% if site.tagline %}{{ site.tagline }}{% endif %}{% if site.tagline and site.description %} Â· {% endif %}{% if site.description %}{{ site.description }}{% endif %}
  </p>
{% endif %}

{% if tools and tools.featured and tools.featured.length %}
  <h2 data-i18n="home.tools">Tools</h2>
  <div class="tool-cards">
    {% for t in tools.featured %}
      <a class="tool-card" href="{{ t.path | url }}">
        <div class="tool-card-title" data-i18n="tools.item.{{ t.slug }}.title">{{ t.label }}</div>
        {% if t.description %}
          <div class="tool-card-desc" data-i18n="tools.item.{{ t.slug }}.desc">{{ t.description }}</div>
        {% endif %}
      </a>
    {% endfor %}
  </div>
{% endif %}

<h2 data-i18n="home.latest">Latest</h2>
{% set items = listPage.items %}
{% include "partials/news-list.njk" %}
{% include "partials/pagination.njk" %}
